@{
    ViewBag.Title = "Home Page";
}

<br/>
<br />
<form action="/Home/SearchItemByName" method="get">
    <label class="form-control">Item Name</label>
    <input type="text" name="name" class="form-control" />
    <input type="submit" value="Search" />
</form>


<br/>
<br/>
<a href="/Home/NewItem">Add a new item</a>
<br/>


<table border="1" class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in ViewBag.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td><a href="/Home/DeleteItem?itemid=@item.itemID" onclick="return confirm('Are you sure you want to delete this?')">Delete</a></td>
            <td><a href="/Home/ItemDetails?itemid=@item.itemID">Update</a></td>
        </tr>
    }



</table>